{
  "name": "@alwatr/weaver-api",
  "version": "1.6.2",
  "baseVersion": "1.6.2",
  "description": "Weaver is a powerful and flexible framework designed to streamline the development of all websites and web applications within our organization.",
  "author": "S. Ali Mihandoost <ali.mihandoost@gmail.com>",
  "private": true,
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=18.16.0",
    "yarn": ">=4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Alwatr/weaver",
    "directory": "packages/api"
  },
  "homepage": "https://github.com/Alwatr/weaver#readme",
  "bugs": {
    "url": "https://github.com/Alwatr/weaver/issues"
  },
  "prettier": "@alwatr/prettier-config",
  "nano-build-development": {
    "sourcemap": true,
    "sourcesContent": true
  },
  "scripts": {
    "s": "yarn run start",
    "b": "yarn run build",
    "w": "yarn run watch",
    "c": "yarn run clean",
    "cb": "yarn run clean && yarn run build",
    "cw": "yarn run clean && yarn run watch",
    "d": "yarn run build:es && DEBUG=1 yarn node",
    "start": "yarn build && yarn serve",
    "build": "nano-build --preset=microservice",
    "watch": "yarn run build --watch",
    "clean": "rm -rfv dist *.tsbuildinfo",
    "serve": "yarn node --enable-source-maps dist/main.mjs",
    "serve:debug": "yarn node --inspect --enable-source-maps dist/main.mjs"
  },
  "devDependencies": {
    "@alwatr/crypto": "^4.2.1",
    "@alwatr/logger": "^3.2.14",
    "@alwatr/nano-build": "^1.3.10",
    "@alwatr/nanotron": "^4.2.1",
    "@alwatr/node-fs": "^1.0.13",
    "@alwatr/prettier-config": "^1.0.4",
    "@alwatr/store": "^7.1.1",
    "@alwatr/tsconfig-base": "^1.2.0",
    "@alwatr/type-helper": "^1.2.6",
    "@alwatr/weaver-common": "workspace:^",
    "@types/node": "^22.5.5",
    "esbuild": "^0.24.0",
    "typescript": "^5.6.2"
  }
}
