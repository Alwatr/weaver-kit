{
  "name": "common",
  "version": "2.0.0-alpha.0",
  "baseVersion": "2.0.0",
  "description": "Weaver is a powerful and flexible framework designed to streamline the development of all websites and web applications within our organization.",
  "author": "S. Ali Mihandoost <ali.mihandoost@gmail.com>",
  "private": true,
  "type": "module",
  "types": "./dist/main.d.ts",
  "main": "./dist/main.cjs",
  "module": "./dist/main.mjs",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.mjs",
      "require": "./dist/main.cjs"
    }
  },
  "license": "AGPL-3.0-only",
  "engines": {
    "node": ">=18.16.0",
    "yarn": ">=4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Alwatr/weaver",
    "directory": "packages/common"
  },
  "homepage": "https://github.com/Alwatr/weaver#readme",
  "bugs": {
    "url": "https://github.com/Alwatr/weaver/issues"
  },
  "prettier": "@alwatr/prettier-config",
  "nano-build-development": {
    "sourcemap": true,
    "sourcesContent": true
  },
  "scripts": {
    "b": "yarn run build",
    "w": "yarn run watch",
    "c": "yarn run clean",
    "cb": "yarn run clean && yarn run build",
    "d": "yarn run build:es && ALWATR_DEBUG=1 yarn node",
    "build": "yarn run build:ts && yarn run build:es",
    "build:es": "nano-build --preset=module",
    "build:ts": "tsc --build",
    "watch": "yarn run watch:ts & yarn run watch:es",
    "watch:es": "yarn run build:es --watch",
    "watch:ts": "yarn run build:ts --watch --preserveWatchOutput",
    "clean": "rm -rfv dist *.tsbuildinfo"
  },
  "dependencies": {
    "@alwatr/logger": "^4.0.0",
    "@alwatr/package-tracer": "^1.0.0"
  },
  "devDependencies": {
    "@alwatr/nano-build": "^1.4.0",
    "@alwatr/prettier-config": "^1.0.5",
    "@alwatr/tsconfig-base": "^1.3.0",
    "@alwatr/type-helper": "^2.0.0",
    "@types/node": "^22.7.5",
    "lit": "^3.2.1",
    "typescript": "^5.6.2"
  }
}
