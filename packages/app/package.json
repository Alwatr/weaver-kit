{
  "name": "app",
  "displayName": "Alwatr WEAVER",
  "version": "2.0.0-alpha.0",
  "baseVersion": "2.0.0",
  "description": "Weaver is a powerful and flexible framework designed to streamline the development of all websites and web applications within our organization.",
  "author": "S. Ali Mihandoost <ali.mihandoost@gmail.com>",
  "private": true,
  "main": "main.js",
  "type": "module",
  "license": "AGPL-3.0-only",
  "browserslist": "> 1.5%, not dead",
  "engines": {
    "node": ">=18.16.0",
    "yarn": ">=4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Alwatr/weaver",
    "directory": "packages/app"
  },
  "homepage": "https://github.com/Alwatr/weaver#readme",
  "bugs": {
    "url": "https://github.com/Alwatr/weaver/issues"
  },
  "prettier": "@alwatr/prettier-config",
  "nano-build": {
    "entryPoints": [
      "src/ts/*.ts"
    ]
  },
  "nano-build-development": {
    "minify": false
  },
  "scripts": {
    "s": "yarn run start",
    "b": "yarn run build",
    "w": "yarn run watch",
    "c": "yarn run clean",
    "cb": "yarn run clean && yarn run build",
    "cw": "yarn run clean && yarn run watch",
    "start": "yarn run build && yarn run serve",
    "serve": "wds",
    "build": "yarn run build:es && yarn run build:11ty",
    "build:es": "nano-build --preset=pmpa",
    "build:ts": "tsc --build",
    "build:11ty": "node --trace-warnings builder/build.mjs",
    "watch": "yarn run watch:11ty & yarn run watch:es & yarn serve",
    "watch:es": "yarn run build:es --watch",
    "watch:11ty": "yarn run build:11ty --watch",
    "clean": "rm -rfv dist tsconfig.tsbuildinfo"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@11ty/eleventy-plugin-directory-output": "^1.0.1",
    "@11ty/eleventy-plugin-rss": "^2.0.2",
    "@alwatr/icon-set-extra": "^0.4.0",
    "@alwatr/icon-set-material": "^2.0.1",
    "@alwatr/nano-build": "^1.4.0",
    "@alwatr/prettier-config": "^1.0.5",
    "@alwatr/tsconfig-base": "^1.3.0",
    "@alwatr/type-helper": "^2.0.0",
    "@alwatr/windstyle": "workspace:^",
    "@swc/html": "^1.7.28",
    "@types/node": "^22.7.5",
    "@web/dev-server": "^0.4.6",
    "alwatr": "workspace:^",
    "common": "workspace:^",
    "cssnano": "^7.0.6",
    "lit": "^3.2.1",
    "postcss": "^8.4.47",
    "postcss-custom-media": "^11.0.2",
    "postcss-import": "^16.1.0",
    "postcss-preset-env": "^10.0.6",
    "postcss-variable-compress": "^3.0.0",
    "postcss-viewport-unit-fallback": "^1.0.1",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.2",
    "workbox-build": "^7.1.1"
  }
}
